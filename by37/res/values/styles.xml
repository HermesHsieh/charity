<resources>

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- 首頁Fragment's margin -->
    <style name="main_fragment_margin" parent="android:Widget">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <!-- Map Menu Button margin/padding -->
    <style name="map_button" parent="android:Widget">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="ListViewStyle_1" parent="android:Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:divider">@color/listview_divider_color</item>
        <item name="android:dividerHeight">@dimen/listview_divider_height</item>
    </style>

    <style name="EditTextStyle_1" parent="android:Widget">
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/gray_hint_color</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextViewShort_1" parent="android:Widget">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TitleTextView_1" parent="android:Widget">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">@color/title_gray_color</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="HighLightTextView_1" parent="android:Widget">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">@android:color/holo_red_light</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>