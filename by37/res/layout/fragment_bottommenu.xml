<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_bottommenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/rl_btn_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/item_click"
        android:visibility="visible" >

        <TextView
            android:id="@+id/tv_btn_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:drawableLeft="@drawable/ic_sell"
            android:drawablePadding="@dimen/tv_drawable_padding"
            android:text="@string/sell_product"
            android:textColor="@color/border_line_white"
            android:textSize="@dimen/fragment_title_text_size" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_btn_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/item_click"
        android:paddingLeft="15dp"
        android:visibility="visible" >

        <TextView
            android:id="@+id/tv_btn_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:drawableLeft="@drawable/ic_news"
            android:drawablePadding="@dimen/tv_drawable_padding"
            android:text="@string/news"
            android:textColor="@color/border_line_white"
            android:textSize="@dimen/fragment_title_text_size" />
    </RelativeLayout>

</LinearLayout>