<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            style="@style/TitleTextView_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_product_sell_title" />

        <TextView
            android:id="@+id/main_product_count_tv"
            style="@style/HighLightTextView_1"
            android:visibility="gone" />
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/productsell_tab_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray_background" >
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/fragment_main_product_left_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/emergency_sample" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#70000000"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/fragment_main_product_left_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="台灣黑熊餅乾    88"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#000000" >

            <ImageView
                android:id="@+id/fragment_main_product_right_imageview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/emergency_sample" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#70000000"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/fragment_main_product_right_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="台灣黑熊餅乾    88"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>